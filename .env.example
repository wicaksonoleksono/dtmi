# ===========================================
# Infrastructure Configuration
# ===========================================
COMPOSE_PROJECT_NAME=optima
NETWORK_NAME=optima-network

# Container names
FLASK_CONTAINER_NAME=optima-flask
CHROMA_CONTAINER_NAME=dtmi

# Ports (host:container)
APP_PORT=6789
CHROMA_EXTERNAL_PORT=2101

# Server config
APP_MODULE=asgi:application
WORKERS=1

# ===========================================
# Application Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4.1-2025-04-14
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ChromaDB - use 'chromadb:8000' for Docker, 'localhost:2101' for local dev
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=DTMI

TOP_K=10
DEFAULT_CONTEXT_EXPANSION_WINDOW=1
MAX_WORKERS=8
BATCH_SIZE=50
RELEVANCE_TIMEOUT=10
ANSWER_TIMEOUT=20

WABLASS_API_KEY=your-wablas-api-key
WABLASS_RATE_LIMIT=100
WABLASS_ENABLE_AUTH=false
WABLASS_WEBHOOK_SECRET=your-webhook-secret

FLASK_ENV=development
DEBUG=false
SECRET_KEY=generate-a-secret-key-here
# FLASK_APP=wsgi.py
